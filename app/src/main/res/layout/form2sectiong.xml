                    <RadioGroup
                        android:id="@+id/lhwf2g1"
                        style="@style/RadioGroup">

                        <RadioButton
                            android:id="@+id/rlhwf2g1_1"
                            style="@style/RadioButton"
                            android:text="@string/rb_yes"/>

                        <RadioButton
